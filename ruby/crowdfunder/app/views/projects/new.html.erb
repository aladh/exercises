<h1>Add A New Project</h1>

<br>

<%= form_for @project do |f| %>

<div class="main-form">
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

	<div>
		<%= f.label :goal %>
		<%= f.number_field :goal, :min => 10, :step => 10 %>
	</div>

	<div>
		<%= f.label :end_date %>
		<%= f.date_field :end_date %>
	</div>

</div>	

<div id="rewards">
	<p>Rewards</p>
	
	<%= f.fields_for :rewards do |reward_fields| %>

	<%= render 'reward_fields', f: reward_fields %>
	<%end%>

	<div class="links">
		<%= link_to_add_association 'add reward', f, :rewards %>
	</div>
</div>
<%= f.submit %>

<%end%>

<br>
<br>

<%= link_to "Back to Projects", projects_url %>