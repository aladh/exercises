
// If searching, then replace HTML, else append
<% if @typed %>
	$('#products').html('<%= j(render(@products)) %>');
<% else %>
	$('#products').append('<%= j(render(@products)) %>');
<% end %>

// Update pagination info under header
$("#pagination_top").html("<%= page_entries_info @products %>");

// Update pagination nav at bottom of page
$('.pagination').html('<%= j(paginate(@products)) %>');
